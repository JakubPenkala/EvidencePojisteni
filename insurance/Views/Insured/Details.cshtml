@model InsuredDetailsViewModel

@{
    ViewData["Title"] = "Detaily pojištěnce";
}

<h1>Podrobnosti</h1>
<h4>Pojištěnce</h4>
<div>
    <input type="hidden" asp-for="Insured.Id" />
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Insured.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Insured.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Insured.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Insured.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Insured.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Insured.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Insured.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Insured.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Insured.Street)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Insured.Street)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Insured.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Insured.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Insured.ZipCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Insured.ZipCode)
        </dd>
    </dl>
    <div>
        @if (User.IsInRole(UserRoles.Admin))
        {
            <span>
                <a asp-controller="Insured" asp-action="Delete" asp-route-id="@Model.Insured.Id">Odstranit</a> |
                <a asp-controller="Insured" asp-action="Edit" asp-route-id="@Model.Insured.Id">Změnit</a> |
            </span>
        }
        <a href='javascript:history.go(-1)'>Zpět</a>
        
    </div>
    <hr />
    <h4>Pojištění</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Insurance.InsuranceType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Insurance.Sum)
                </th>
        </thead>
        <tbody>
            @foreach (var item in Model.GetInsurance)
        {
            <tr>
                <td>
                        <a asp-controller="Insurance" asp-action="Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.InsuranceType)
                    </a>
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Sum)
                </td>
                <td>
                        @if (User.IsInRole(UserRoles.Admin))
                        {
                            <p>
                                <a asp-controller="Insurance" asp-action="Edit" asp-route-id="@item.Id">Změnit</a> |
                                <a asp-controller="Insurance" asp-action="Delete" asp-route-id="@item.Id">Odstranit</a> |
                            </p>
                        }
                </td>
            </tr>
        }
        </tbody>
    </table> 
    <a asp-controller="Insurance" asp-action="Create" asp-route-id="@Model.Insured.Id">Vytvořit nové pojištění</a>
</div>

