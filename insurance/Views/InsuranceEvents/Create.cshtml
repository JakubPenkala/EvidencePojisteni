@model InsuranceEventsViewModel

@{
    ViewData["Title"] = "Vytvořit pojištní událost";
}

<h1>Vytvořit novou pojistní událost</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Event" class="control-label"></label>
                <input asp-for="Event" class="form-control" />
                <span asp-validation-for="Event" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventDate" class="control-label"></label>
                <input asp-for="EventDate" class="form-control" />
                <span asp-validation-for="EventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id">
                    <input type="submit" value="Vytvořit" class="btn btn-primary" />
                </label>
            </div>
        </form>
    </div>
</div>

<div>
    <a href='javascript:history.go(-1)'>Zpět</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

