@model InsuranceEventsDetailsViewModel

@{
    ViewData["Title"] = "Detaily pojištní události";
}

<h1>Podrobnosti</h1>
<h4>Pojistné události</h4>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsuranceEvents.Event)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuranceEvents.Event)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsuranceEvents.EventDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuranceEvents.EventDate)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole(UserRoles.Admin))
    {
        <span>
            <a asp-controller="InsuranceEvents" asp-action="Delete" asp-route-id="@Model.InsuranceEvents.Id">Odstranit</a> |
            <a asp-controller="InsuranceEvents" asp-action="Edit" asp-route-id="@Model.InsuranceEvents.Id">Změnit</a> |
        </span>
    }
    <a href='javascript:history.go(-1)'>Zpět</a>
    <hr />
</div>
